/* ================== 暗黑主题样式表 ================== */

/* 全局基础样式 */
QMainWindow, QWidget {
    font-size: 13px;
    font-family: "Segoe UI", "Microsoft YaHei", "SF Pro Display", sans-serif;
    background-color: #111827;
    color: #f9fafb;
}

/* ================== 菜单栏样式 ================== */
menuBar {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 #1f2937, stop:1 #111827);
    border-bottom: 2px solid #374151;
    padding: 8px;
    border-radius: 0;
}
/* ========== 左侧功能按钮（已满意，保留） ========== */
#FunctionButtonGroup QToolButton {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 #374151, stop:1 #1f2937);
    color: #f9fafb;
    border: 1px solid #4b5563;
    border-radius: 8px;
    padding: 8px 4px;  /* 图标在上，文字在下，横向padding可小 */
    font-size: 12px;
    font-weight: 500;
}
#FunctionButtonGroup QToolButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 #4b5563, stop:1 #374151);
    border-color: #6b7280;
}
#FunctionButtonGroup QToolButton:pressed {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 #1f2937, stop:1 #111827);
}

/* ========== 右侧状态控制区 ========== */
#StatusControlWidget {
    background: #252f3f;  /* 比左侧稍深，突出“状态区” */
    border: 1px solid #374151;
    border-radius: 8px;
    padding: 4px 8px;
}

/* 状态组内标签（MQTT/持久化/数据库） */
#StatusControlWidget QLabel {
    color: #e5e7eb;
    font-size: 13px;
    font-weight: 500;
    padding: 0 4px;
}

/* 状态指示灯样式（保持你代码中的颜色，仅微调） */
#StatusControlWidget QLabel[status="connected"] {
    color: #10b981; font-weight: bold;
}
#StatusControlWidget QLabel[status="disconnected"] {
    color: #ef4444; font-weight: bold;
}
#StatusControlWidget QLabel[status="running"] {
    color: #3b82f6; font-weight: bold;
}
#StatusControlWidget QLabel[status="stopped"] {
    color: #6b7280; font-weight: bold;
}
#StatusControlWidget QLabel[status="db_connected"] {
    color: #8b5cf6; font-weight: bold;
}
#StatusControlWidget QLabel[status="db_warning"] {
    color: #f59e0b; font-weight: bold;
}

/* ========== 开关按钮样式 ========== */
#StatusControlWidget QPushButton {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 #374151, stop:1 #1f2937);
    color: #f9fafb;
    border: 1px solid #4b5563;
    border-radius: 4px;
    padding: 4px 8px;
    font-size: 12px;
    font-weight: 500;
    min-height: 22px;
    min-width: 40px;
}

#StatusControlWidget QPushButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 #4b5563, stop:1 #374151);
    border-color: #6b7280;
}

#StatusControlWidget QPushButton:pressed {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 #1f2937, stop:1 #111827);
}

#StatusControlWidget QPushButton:disabled {
    background: #374151;
    color: #6b7280;
    border-color: #4b5563;
}

/* 刷新按钮特殊样式（圆形/紧凑） */
#StatusControlWidget QPushButton[refresh="true"] {
    background: #374151;
    border: 1px solid #4b5563;
    border-radius: 11px; /* 圆形按钮 */
    padding: 0;
    min-width: 22px;
    min-height: 22px;
    font-size: 14px;
}
#StatusControlWidget QPushButton[refresh="true"]:hover {
    background: #4b5563;
}

/* ================== 主窗口布局样式 ================== */
QSplitter#mainSplitter {
    border: none;
    background: #111827;
}

QSplitter#mainSplitter::handle {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                               stop:0 #374151, stop:0.5 #4b5563, stop:1 #374151);
    width: 12px;
    border-radius: 6px;
    margin: 2px;
}

QSplitter#mainSplitter::handle:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                               stop:0 #4b5563, stop:0.5 #6b7280, stop:1 #4b5563);
}

/* ================== 控制面板样式 ================== */
QFrame#controlContainer {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 #1f2937, stop:1 #111827);
    border: 2px solid #374151;
    border-radius: 16px;
    margin: 4px;
}

QLabel#controlPanelTitle {
    font-size: 18px;
    font-weight: 600;
    color: #f9fafb;
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 #374151, stop:1 #4b5563);
    border: 1px solid #6b7280;
    border-radius: 12px;
    padding: 12px;
    margin: 8px;
}

/* ================== 标签页样式 ================== */
QTabWidget#controlTabs {
    background: transparent;
    border: none;
}

QTabWidget#controlTabs::pane {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 #1f2937, stop:1 #111827);
    border: 2px solid #374151;
    border-radius: 12px;
    margin-top: 8px;
}

QTabWidget#controlTabs::tab-bar {
    left: 8px;
}

QTabWidget#controlTabs QTabBar::tab {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 #1f2937, stop:1 #111827);
    color: #9ca3af;
    border: 2px solid #374151;
    padding: 12px 20px;
    margin-right: 4px;
    border-top-left-radius: 12px;
    border-top-right-radius: 12px;
    font-weight: 500;
    min-width: 80px;
}

QTabWidget#controlTabs QTabBar::tab:selected {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 #374151, stop:1 #4b5563);
    color: #f9fafb;
    border-color: #6b7280;
    border-bottom-color: #1f2937;
    font-weight: 600;
}

QTabWidget#controlTabs QTabBar::tab:hover:!selected {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 #374151, stop:1 #1f2937);
    color: #d1d5db;
}

/* ================== 可视化区域样式 ================== */
QFrame#visualizationContainer {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 #1f2937, stop:1 #111827);
    border: 2px solid #374151;
    border-radius: 16px;
    margin: 4px;
}

QLabel#visualizationTitle {
    font-size: 18px;
    font-weight: 600;
    color: #f9fafb;
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                               stop:0 #374151, stop:1 #4b5563);
    border: 1px solid #6b7280;
    border-radius: 12px;
    padding: 12px;
    margin: 8px;
}

